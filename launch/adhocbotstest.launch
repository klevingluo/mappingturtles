<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>
<launch>

  <arg name="record" default="false" />
  <arg name="visualize" default="false" />

  <include file="$(find mappingturtles)/launch/simulate5.launch">
    <arg name="world" value="five-world" />
  </include>

  <include file="$(find mappingturtles)/launch/adhocbot.launch">
    <arg name="prefix" value="robot_0" />
    <arg name="use_sim_time" value="true" />
  </include>

  <include file="$(find mappingturtles)/launch/adhocbot.launch">
    <arg name="prefix" value="robot_1" />
    <arg name="use_sim_time" value="true" />
  </include>

  <node 
    if="$(arg visualize)"
    name="rviz" 
    pkg="rviz" 
    type="rviz" 
    args="-d $(find mappingturtles)/rviz/adhov.rviz"/>

  <node 
    if="$(arg visualize)"
    name="console" 
    pkg="rqt_console" 
    type="rqt_console" />
  <!-- for recording -->

  <include 
    if="$(arg record)"
    file="$(find mappingturtles)/launch/record_sim.launch">
    <arg name="prefix" value="robot_0"/>
  </include>

</launch>
